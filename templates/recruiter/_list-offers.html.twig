<div class="py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {%  for jobOffer in myJobOffers %}
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-header text-center">
                            <h3 class="card-title">{{ jobOffer.title }}</h3>
                            <h4 class="card-subtitle mb-2 text-muted text-start">{{ jobOffer.location }}</h4>
                            <p class="card-subtitle text-start {{ jobOffer.isApproved ? "text-success" : "text-warning"}}">{{ jobOffer.isApproved ? "Publiée" : "En cours d'approbation"}}</p>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ jobOffer.description }}</p>
                            <div class="dropdown-divider"></div>
                            {% include('recruiter/_list-candidates.html.twig') %}
                        </div>
                        <div class="card-footer bg-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <a class="btn btn-sm btn-danger" href="{{ path('app_recruiter_delete_job_offer', { 'id' : jobOffer.id }) }}">Supprimer</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune offre publiée</p>
            {% endfor %}
        </div>
    </div>
</div>

