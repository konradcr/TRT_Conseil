{% extends 'base.html.twig' %}

{% block title %}Recruteur - Publier une offre{% endblock %}

{% block header %}
    {% include('header/header-recruiter.html.twig') %}
{% endblock %}

{% block body %}
<div class="w-25 mx-auto my-5">
    <h1 class="text-center">Publier une offre d'emploi</h1>
    {{ form_start(postJobOfferForm) }}
    {{ form_row(postJobOfferForm.title) }}
    {{ form_row(postJobOfferForm.location) }}
    {{ form_row(postJobOfferForm.description) }}
    <div class="text-center my-5">{{ form_row(postJobOfferForm.submit) }}</div>
    {{ form_end(postJobOfferForm) }}
</div>
{% endblock %}
