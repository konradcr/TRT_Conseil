{% extends 'base.html.twig' %}

{% block title %}TRT Conseil - Se connecter{% endblock %}

{% block header %}
    {% include('header/header-home.html.twig') %}
{% endblock %}

{% block body %}
<form method="post" class="form-signin">
    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 text-center">
            Vous êtes connecté avec l'adresse email {{ app.user.username }} <br> <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% else %}
        <div>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus placeholder="Email">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-primary my-4 w-100" type="submit">Se connecter</button>
        </div>
    {% endif %}
</form>
{% endblock %}
