<div class="py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {%  for jobOffer in jobOffers %}
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-header text-center">
                            <h3 class="card-title">{{ jobOffer.title }}</h3>
                            <h4 class="card-subtitle mb-2 text-muted text-start">{{ jobOffer.location }}</h4>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ jobOffer.recruiter.company }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ jobOffer.recruiter.email }}</h6>
                            <p class="card-text">{{ jobOffer.description }}</p>
                        </div>
                        <div class="card-footer bg-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-primary" href="{{ path('app_consultant_approve_job_offer', { 'id' : jobOffer.id }) }}">Approuver</a>
                                    <a class="btn btn-sm btn-danger" href="{{ path('app_consultant_disapprove_job_offer', { 'id' : jobOffer.id }) }}">Refuser</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune offre Ã  approuver</p>
            {% endfor %}
        </div>
    </div>
</div>

