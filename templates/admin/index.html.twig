{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}

<div>
    <h1>Liste des Consultants</h1>
    <button><a href="{{ path('app_admin_create_consultant') }}">Cr√©er un Consultant</a></button>
    <table>
        <thead>
        <tr>
            <th>Email</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {%  for consultant in consultants %}
        <tr>
            <td>{{ consultant.email }}</td>
            <td><button><a href="{{ path('app_admin_delete_consultant', { 'id' : consultant.id }) }}">Supprimer</a></button></td>
        </tr>
        {% else %}
            <tr>
                <td>Aucun consultant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
