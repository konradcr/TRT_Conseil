{% extends 'base.html.twig' %}

{% block title %}Candidat - Mon Profil{% endblock %}

{% block header %}
    {% include('header/header-candidate.html.twig') %}
{% endblock %}

{% block body %}
<div class="text-center my-5">
    <h1>Mon profil Candidat</h1>
    <div class="mt-5">
        <p><b>Email : </b>{{ app.user.email }}</p>
        {% if app.user.firstName %}
            <p><b>Prénom : </b>{{ app.user.firstName }}</p>
        {% else %}
            <p><b>Prénom : </b><em>NON RENSEIGNÉE</em></p>
        {% endif %}
        {% if app.user.lastName %}
            <p><b>Nom : </b>{{ app.user.lastName }}</p>
        {% else %}
            <p><b>Nom : </b><em>NON RENSEIGNÉE</em></p>
        {% endif %}
        {% if app.user.cvPath %}
            <p><b>CV : </b><a target="_blank" class="btn-link" href="{{ asset('uploads/CV/' ~ app.user.cvPath) }}">Voir le CV</a></p>
        {% else %}
            <p><b>CV : </b><em>NON RENSEIGNÉ</em></p>
        {% endif %}
        <a class="btn btn-primary" href="{{ path('app_candidate_edit_profile') }}">Modifier le profil</a>
    </div>
</div>
{% endblock %}
