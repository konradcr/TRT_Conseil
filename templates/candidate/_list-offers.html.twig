<div class="py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {%  for jobOffer in jobOffers %}
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-header text-center">
                            <h3 class="card-title">{{ jobOffer.title }}</h3>
                            <h4 class="card-subtitle mb-2 text-muted text-start">{{ jobOffer.location }}</h4>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ jobOffer.description }}</p>
                        </div>
                        <div class="card-footer bg-body">
                            <div class="d-flex justify-content-between align-items-center">
                                {% if jobOffer.hasApplied %}
                                    <button class="btn btn-secondary disabled">Déjà postulé</button>
                                {% else %}
                                    <a class="btn btn-primary" href="{{ path('app_candidate_apply_job_offer', { 'id' : jobOffer.id }) }}">Postuler</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune annonce publiée</p>
            {% endfor %}
        </div>
    </div>
</div>