{% extends 'base.html.twig' %}

{% block title %}Candidat - Modifier mon profil{% endblock %}

{% block header %}
    {% include('header/header-candidate.html.twig') %}
{% endblock %}

{% block body %}
<div class="w-25 mx-auto my-5">
    <h1 class="text-center">Modifier mon profil Candidat</h1>
    <div>
        {{ form_start(editCandidateProfileForm) }}
        {{ form_row(editCandidateProfileForm.firstName) }}
        {{ form_row(editCandidateProfileForm.lastName) }}
        {{ form_row(editCandidateProfileForm.cvPath) }}
        <div class="text-center my-5">{{ form_row(editCandidateProfileForm.submit) }}</div>
        {{ form_end(editCandidateProfileForm) }}
    </div>
</div>
{% endblock %}
